<ui:FluentWindow x:Class="WPFCSharpPackUriApplicationCore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCSharpPackUriApplicationCore"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="FluentWindow_Loaded">
    <ui:FluentWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ui:FluentWindow.Resources>
    <StackPanel>
        <ui:TitleBar Title="WPF UI"/>
        <ui:Card Margin="8">
            <ui:Button Content="Hello World" Icon="{ui:SymbolIcon Fluent24}" Click="Button_Click" />
        </ui:Card>
    </StackPanel>
</ui:FluentWindow>
